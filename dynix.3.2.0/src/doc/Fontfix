#!/bin/sed -f
s/\\fR/\\f1/g
s/\\fI/\\f2/g
s/\\fB/\\f3/g
s/^\.ft[ 	]*R/.ft 1/
s/^\.ft[ 	]*I/.ft 2/
s/^\.ft[ 	]*B/.ft 3/
# $Header: Fontfix 1.4 86/03/17 $

